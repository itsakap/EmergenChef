<% if flash[:error] %>
  <div class = 'col-md-5'></div>
  <div id = "error" class = "col-md-2 alert alert-dismissable alert-warning">
    <button type = "button" class = "close" data-dismiss = "alert">x
    </button>
    <strong><%= flash[:error] %></strong>
  </div>
  <div class = 'col-md-5'></div>
<% elsif notice %>
<div class = 'col-md-5'></div>
  <div id = "error" class = "col-md-2 alert alert-dismissable alert-success">
    <button type = "button" class = "close" data-dismiss = "alert">x
    </button>
    <strong><%= notice %></strong>
  </div>
  <div class = 'col-md-5'></div>
<% end %>

<div class = "well horizontal-form col-md-4 col-md-offset-4">
<fieldset>
  <legend> Sign In </legend>
<div>
<%= form_for @user, {url:'/auths', method:'post'} do |u| %>
  <%= u.text_field :username, class: "form-control form-group", :placeholder => "Username" %>
  <%= u.password_field :password,class: "form-control form-group", :placeholder => "Password" %>
  <div class = 'text-center'><%= u.submit "Sign In", class: " btn btn-primary" %></div>
<% end %></div>
</fieldset>
</div>