<h2>Orders <small>| <%= link_to 'New Order', new_order_path %></small></h2>
<ul>
  <% @orders.each do |o| %>
   <li><%= link_to "#{o.name}", o %>
     <% if "#{current_user.id}" == "#{id}" %>
     | <%= link_to "Edit", edit_order_path(o) %> | <%= link_to 'delete', o, {method: :delete} %> | <%= button_to "Tonight", o, {method: :post, class: "btn btn-danger"} %>
     <% end %>
   </li>
  <% end %>
</ul>