              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Meet our Chefs <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Chez Adam', adam_path %></li>
                <li class = "divider"></li>
                <li><a href="#">Chez Chantilly</a></li>
                <li><a href="#">Chez Rachel</a></li>
                <li><a href="#">Chez Tiffany</a></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    <div class = "text-right col-md-3 col-md-offset-9"><% if current_user %>
          Logged in as <%= current_user.username %>
          &nbsp;|&nbsp;
          <%= link_to 'Sign Out', auths_path, {method: :delete} %>
        <% else %>
          <a data-toggle = "modal" data-target = "#signIn">Sign In</a>
          or
          <a data-toggle = "modal" data-target = "#signUp">Sign Up</a>
          &mdash; you're missing out

        <% end %>
          <div class="modal fade" id="signIn" tabindex="-1" role="dialog" aria-labelledby="signInLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-body">

                  <!-- Modal header/message -->
                  <h3>Sign In</h3>

                  <!-- Form Partial for Login -->
                  <div>
                    <%= form_for :user, {url:'/auths', method: :post} do |u| %>
                      <%= u.text_field :username, class: "form-control form-group", :placeholder => "Username" %>
                      <%= u.password_field :password,class: "form-control form-group", :placeholder => "Password" %>
                      <div class = 'text-center'><%= u.submit "Sign In", class: " btn btn-primary" %>
                      </div>
                    <% end %>
                  </div>

                  <!-- Sign-up link (redirects to users/new)-->
                  Don't have an account yet? <%= link_to "Sign up!", new_user_path %>
                </div>
              </div>
            </div>
          </div>
          <div class="modal fade" id="signUp" tabindex="-1" role="dialog" aria-labelledby="signUpLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-body">

                  <!-- Modal header/message -->
                  <h3>Sign Up!</h3>

                  <!-- Form Partial for Login -->
                  <div>
                    <%= form_for(User.new) do |f| %>

                      <div class = "field form-group clearfix">
                       <div class = "col-md-12 text-left"> <%= f.label :post, "Username" %></div>
                        <div class = "col-md-12"><%= f.text_field :username, class: "form-control"%></div>
                      </div>
                      <div class = "form-group field clearfix">
                        <div class = "text-left col-md-12"><%= f.label :post, "E-Mail Address", class: "control-label" %></div>
                        <div class = "col-md-12"> <%= f.email_field :email_address, class: "form-control" %></div>
                      </div>
                      <div class = "field form-group clearfix">
                        <div class = "text-left col-md-12"><%= f.label "Password", class: "control-label" %></div>
                        <div class = "col-md-12"><%= f.password_field :password, class: "form-control" %></div>
                      </div>
                      <div class = "field form-group clearfix">
                        <div class = "text-left col-md-12"><%= f.label :post, "Confirm Password", class: "control-label" %></div>
                        <div class = "col-md-12"><%= f.password_field :password_confirmation, class: "form-control" %></div>
                      </div>

                      <div class = "form-group clearfix"><%= f.submit class: "col-md-4 col-md-offset-4 btn btn-primary" %></div>
                    <% end %>
                  </div>

                  <!-- Sign-up link (redirects to users/new)-->
                  <%= link_to "Sign in", new_auth_path %>
                </div>
              </div>
            </div>
          </div>
      </div>
    </nav></div>
  </header>
<%= yield %>
<footer class = "footer row">
  <div class = "text-center">&copy; 2014 by Adam Kaplan</div>
</footer>
</body>
</html>
